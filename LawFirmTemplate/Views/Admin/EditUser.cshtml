@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using LawFirmTemplate.Data.Entities;
@model User
<h1>Takım Üyesi Düzenle</h1>

<style>
    .ImageSize {
        width: 200px;
        height: 200px;
    }
</style>


<form asp-action="EditUser" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <input asp-for="Id" value="@Model.Id" hidden />

    <div class="form-group">
        <label for="Description">DisplayName</label>
        <input type="text" class="form-control" id="DisplayName" asp-for="DisplayName" value="@Model.DisplayName">
    </div>
    <div class="form-group">
        <label for="Description">Title</label>
        <input type="text" class="form-control" id="Title" asp-for="Title" value="@Model.Title">
    </div>
    <div class="form-group">
        <label for="Description">PracticeArea</label>
        <input type="text" class="form-control" id="PracticeArea" asp-for="PracticeArea" value="@Model.PracticeArea">
    </div>
    <div class="form-group">
        <label for="Description">PhoneNumber</label>
        <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" value="@Model.PhoneNumber">
    </div>
    <div class="form-group">
        <label for="Description">Mail</label>
        <input type="text" class="form-control" id="Mail" asp-for="Mail" value="@Model.Mail">
    </div>
    <div class="form-group">
        <label for="Description">Social1</label>
        <input type="text" class="form-control" id="Social1" asp-for="Social1" value="@Model.Social1">
    </div>
    <div class="form-group">
        <label for="Description">Social2</label>
        <input type="text" class="form-control" id="Social2" asp-for="Social2" value="@Model.Social2">
    </div>
    <div class="form-group">
        <label for="Description">Social3</label>
        <input type="text" class="form-control" id="Description" asp-for="Social3" value="@Model.Social3">
    </div>


    <div class="form-group">
        <label for="Description">Order</label>
        <input type="number" class="form-control" id="Order" asp-for="Order" value="@Model.Order">
    </div>


    <div class="form-group">
        <label for="ImageFile">Image Upload</label>
        <input type="file" class="form-control-file" id="ImageFile" name="ImageFile">
    </div>
    <div class="form-group">
        <label for="ImageFile">Mevcut Resim</label>
        <img class="ImageSize" src="@Model.ImageUrl" style="max-height: 400px; width: auto; border: 1px solid red;">


    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
