@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using LawFirmTemplate.Data.Entities;
@model User


<style>
    .ImageSize {
        width: 200px;
        height: 200px;
    }
</style>


<div class="row g-3">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h1>Takım Üyesi Ekle</h1>
        <form asp-action="AddUser" asp-controller="Admin" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label for="Description">DisplayName</label>
                <input type="text" class="form-control" id="DisplayName" asp-for="DisplayName">
            </div>
            <div class="form-group">
                <label for="Description">Title</label>
                <input type="text" class="form-control" id="Title" asp-for="Title">
            </div>
            <div class="form-group">
                <label for="Description">PracticeArea</label>
                <input type="text" class="form-control" id="PracticeArea" asp-for="PracticeArea">
            </div>
            <div class="form-group">
                <label for="Description">PhoneNumber</label>
                <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber">
            </div>
            <div class="form-group">
                <label for="Description">Mail</label>
                <input type="text" class="form-control" id="Mail" asp-for="Mail">
            </div>
            <div class="form-group">
                <label for="Description">Social1</label>
                <input type="text" class="form-control" id="Social1" asp-for="Social1">
            </div>
            <div class="form-group">
                <label for="Description">Social2</label>
                <input type="text" class="form-control" id="Social2" asp-for="Social2">
            </div>
            <div class="form-group">
                <label for="Description">Social3</label>
                <input type="text" class="form-control" id="Description" asp-for="Social3">
            </div>


            <div class="form-group">
                <label for="Description">Order</label>
                <input type="number" class="form-control" id="Order" asp-for="Order">
            </div>


            <div class="form-group">
                <label for="ImageFile">Image Upload</label>
                <input type="file" class="form-control-file" id="ImageFile" name="ImageFile">
            </div>
            <div class="form-group">
                <label for="ImageFile">Mevcut Resim</label>
                <img class="ImageSize" style="max-height: 400px; width: auto; border: 1px solid red;">


            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>


